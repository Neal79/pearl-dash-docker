  return new Promise<void>((resolve, reject) => {
    const img = new Image()
    img.onload = () => {
      // Only update the display URL after the image is fully loaded
      currentDisplayUrl.value = url
      resolve()
    }
    img.onerror = () => {
      reject(new Error('Failed to load image'))
    }
    img.src = url
  })
}

